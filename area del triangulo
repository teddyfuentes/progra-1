// areatriangulolados.cpp : Defines the entry point for the console application.
//

#include "stdafx.h"
#include <iostream>
#include"conio.h"
#include"math.h"

using namespace std;

void main()
{

	float a,b,c,p,area;
	cout<<"ingresar los lados del traiangulo";
	cin>>a;
	cin>>b;
	cin>>c;
	p=(a+b+c)/2;
	area= sqrt(p*(p-a)*(p-b)*(p-c));
	cout <<"el area de este hermoso triangulo  es:"<<area;
	cout<< "el perimetro del triangulo es" <<p;
	getch();
}
