#include "stdafx.h"
#include <iostream> 
#include "conio.h"
using namespace std;
void main()
{
    int n;
	do{
	cout<<"ingrese un numero"<<endl;
	cin>>n;
	}while (n<0);
	{
	if (n%2==0) 
		cout<<"el nuemero es par"<<endl;
	else 
		cout<<"el nuemro no es par";
	}
  getch();
}


