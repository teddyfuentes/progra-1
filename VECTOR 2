void cargar (double a[], int tam)
{
	for (int i=0;i<tam;i++) {
		cout<<"a["<<i<<"]=";
	    cin>>a[i]; 

		}
} 
void mostrar(double a[], int tam)
{
	for(int i=0;i<tam;i++)
	{
		cout<<"a["<<i<<"]="<<a[i]<<endl;
	}
}
double promedio (double a[], int tam)
{
	double p=0;
	for (int i=0;i<tam;i++)
	p=p+a[i];
	return (p/tam);
}
double mayor(double a[], int tam)
{ 
	double may; 
	may= a[0];
	for(int i=0;i<tam;i++) 
		if(a[i]>a[0]) may=a[i];
	return (may);
}
double menor(double a[], int tam) 
{
	double men; 
   men= a[0];
   for (int i=0;i<tam;i++)
	   if (a[i]<a[0]) men=a[i] ;
   return (men);
}
void burbuja (double a[], int tam)
{
	int aux, i,j; 
	for (i = 0; i < tam; i++)
	{ 
		for (j= i + 1; j<tam; j++)
		{ 
			if (a[i]>a[j])
			{ 
				aux=a[i];
				a[i]=a[j];
				a[j]=aux;
			}
		}
	}
}
double diferencia (double a[], int tam)
{ 
	double dif = mayor(a, tam) - menor(a, tam);
	return dif;
}

       
