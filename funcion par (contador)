#include "stdafx.h"
#include <iostream>
#include "conio.h"

using namespace std;
bool par_num (int a);
void main ()
{
	bool z;
	int i,n, numero;
	cout<<"cantidad de veces a repetir!"<<endl;
	cin>>n;
	for (i=1;i<=n;i++){
	cout<<"ingresar numero "<<endl;
	cin>>numero;
	z=par_num(numero);
	if (z)
		cout<<"es par";
	else 
		cout<<"es impar";
	-getch();
}
}
	bool par_num(int a)
		{
	
			if (a%2==0)
			return true;
		else 
		    return false;
		}



